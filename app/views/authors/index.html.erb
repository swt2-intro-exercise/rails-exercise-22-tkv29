<h1> Listing authors </h1>
<table>
    <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Homepage</th>
        <th colspan="3"></th>
    </tr>
    <% @authors.each do |author| %>
    
    <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.homepage %></td>
        <td><%= link_to 'Show', author %></td>
    </tr>
    <% end %>
</table>
<%= link_to 'New', new_author_path %>